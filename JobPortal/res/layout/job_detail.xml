<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Framelayout to display Fragments -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6699FF"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:shadowColor="#909090"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5.0"
        android:text="Job Detail"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" 
        android:background="#fff">
		
			<!-- container ll -->
		   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
		
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/job_title"
                android:layout_width="fill_parent"
                android:textColor="#FF6600"
                android:layout_height="wrap_content"
                android:text="Big Ass Job Thing"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/company"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Acharya Softwares Pvt. Ltd"
                android:textSize="14sp"
                android:textColor="#336666"
                android:layout_marginBottom="5dp" />

            <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#ccc" />
            
            <!-- table type layout -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"  
                    android:layout_marginRight="15dp">
                    
                    
                    
                   <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                    <TextView  android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Job Id" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView   android:layout_width="0dp" android:layout_weight="8" android:layout_height="wrap_content"
                        android:text="5541054" android:id="@+id/job_id" />
                    </LinearLayout>
                    
                   <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                     <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Posted On" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="07/29/2025"  android:id="@+id/date_posted" />
                    </LinearLayout>
                    
                    <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                     <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Ends On" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="07/29/2025"  android:id="@+id/date_ending" />
                    </LinearLayout>
                   
                      <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                     <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Experience" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="4-9 years"  android:id="@+id/experience" />
                    </LinearLayout>
                    
                      
                     <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                    <TextView  android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Location" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="New"  android:id="@+id/location" />
                    </LinearLayout>
                    
                     <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                    <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Salary" android:textStyle="bold" android:textColor="#336666"/>
                    <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="22000 per month"  android:id="@+id/salary" />
                    </LinearLayout>
                    
                     <LinearLayout  android:layout_width="fill_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                    <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Key Skills" android:textStyle="bold" android:textColor="#336666"/>
                    <TextView   android:layout_width="0dp" android:layout_weight="8"  android:layout_height="wrap_content"
                        android:text="IT"  android:id="@+id/skills" />
                    </LinearLayout>
                    
                     <LinearLayout  android:layout_width="match_parent"
                       android:layout_height="wrap_content" android:orientation="horizontal"> 
                    <TextView   android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content"
                        android:text="Qualification" android:textStyle="bold" android:textColor="#336666"/>
                     <TextView  android:layout_width="0dp" android:layout_weight="8" android:layout_height="wrap_content"
                        android:text="Post" android:id="@+id/qualifications" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
           <!-- end of table type layout -->
        </LinearLayout>
       
           <!-- more data below -->
           <TextView
               android:layout_marginTop="8dp"
               android:layout_marginBottom="10dp"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:background="#6699FF"
		       android:paddingBottom="5dp"
		       android:paddingLeft="5dp"
		       android:paddingTop="8dp"
		       android:shadowColor="#909090"
		       android:shadowDx="2"
		       android:shadowDy="2"
		       android:shadowRadius="5.0"
		       android:text="Job Description"
		       android:textColor="#fff"
		       android:textSize="16sp" />
           
           <TextView
               android:id="@+id/job_description"
               android:padding="10dp"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. \n\nNam nibh. Nunc varius facilisis eros. Sed erat. In in velit quis arcu ornare laoreet. Curabitur adipiscing luctus massa.

\n\nInteger ut purus ac augue commodo commodo. Nunc nec mi eu justo tempor consectetuer. Etiam vitae nisl. \n\nIn dignissim lacus ut ante. Cras elit lectus, bibendum a, adipiscing vitae, commodo et, dui.

Ut tincidunt tortor. Donec nonummy, enim in lacinia pulvinar, velit tellus scelerisque augue, ac posuere libero urna eget neque. \n\n\nCras ipsum. Vestibulum pretium, lectus nec venenatis volutpat, purus lectus ultrices risus, a condimentum risus mi et quam. Pellentesque auctor fringilla neque. Duis eu massa ut lorem iaculis vestibulum. Maecenas facilisis elit sed justo. Quisque volutpat malesuada velit."
               />
           <TextView
               android:layout_marginTop="12dp"
               android:layout_marginBottom="10dp"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:background="#6699FF"
		       android:paddingBottom="5dp"
		       android:paddingLeft="5dp"
		       android:paddingTop="8dp"
		       android:shadowColor="#909090"
		       android:shadowDx="2"
		       android:shadowDy="2"
		       android:shadowRadius="5.0"
		       android:text="Company Details"
		       android:textColor="#fff"
		       android:textSize="16sp" />
           
           <LinearLayout android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:background="#fff"
               android:padding="10dp">
            
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:layout_marginRight="15dp">
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Name" android:textStyle="bold" android:textColor="#336666" android:layout_marginBottom="3dp"/>
                     <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Industry" android:textStyle="bold" android:textColor="#336666" android:layout_marginBottom="3dp"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Address" android:textStyle="bold" android:textColor="#336666" android:layout_marginBottom="3dp"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Telephone" android:textStyle="bold" android:textColor="#336666" android:layout_marginBottom="3dp"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Description" android:textStyle="bold"  android:textColor="#336666" android:layout_marginBottom="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Acharya Softwares Pvt. Ltd." android:layout_marginBottom="3dp" android:id="@+id/company_name"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="IT-Software" android:layout_marginBottom="3dp" android:id="@+id/category"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="New Baneshwor, Kathmandu" android:layout_marginBottom="3dp" android:id="@+id/company_address"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="9841687340" android:layout_marginBottom="3dp" android:id="@+id/telephone"/>
                    <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Nam nibh. Nunc varius facilisis eros. Sed erat. In in velit quis arcu ornare laoreet. Curabitur adipiscing luctus massa."
                         android:layout_marginBottom="3dp" android:id="@+id/company_description"/>
                </LinearLayout>
                
           </LinearLayout>
           
				<TextView 
				    android:id="@+id/txtCompanyDetail"
				    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:text="@string/company_details"
                    android:textStyle="italic" android:linksClickable="true" android:autoLink="all"
                     android:textColor="#f30"
                    />
           
           
           <LinearLayout android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="15dp">
           	 <TextView
           	     android:id="@+id/txtApply"
		       android:layout_width="0dp"
				android:layout_weight="1"
		       android:layout_height="wrap_content"
				android:padding="10dp"
		       android:shadowColor="#909090"
		       android:shadowDx="2"
		       android:shadowDy="2"
		       android:shadowRadius="5.0"
		       android:text="Apply"
		       android:textColor="#fff"
		       android:gravity="center_horizontal"
		       android:textSize="18sp" 
		       android:background="@drawable/btn_apply_selector"/>
           	 
           	 <View android:layout_width="1dp"
           	     android:layout_height="fill_parent"
           	     android:background="#f0f0f0"/>
           	 <TextView
           	     android:id="@+id/txtSaveJob"
		       android:layout_width="0dp"
				android:layout_weight="1"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:shadowColor="#909090"
		       android:shadowDx="2"
		       android:shadowDy="2"
		       android:shadowRadius="5.0"
		       android:text="Save Job"
		        android:gravity="center_horizontal"
		       android:textColor="#fff"
		       android:textSize="18sp" 
		       android:background="@drawable/btn_apply_selector"/>
           	 </LinearLayout>
           
           
		    </LinearLayout>  <!-- end of container ll -->
		   
    </ScrollView>
			
</LinearLayout>
 <!-- Listview to display slider menu -->

   <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tapToSignUpLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#6699FF"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="20dp" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:clickable="false"
                android:src="@drawable/ic_profile" />

            <LinearLayout
                android:id="@+id/profile_layout_logged_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/jobseeker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:shadowColor="#909090"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:text="Rabin Kaspal"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jobseeker_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:shadowColor="#909090"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:text="rabinkaspal@gmail.com"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_layout_logged_out"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:shadowColor="#909090"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:text="Guest"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:shadowColor="#909090"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3.0"
                    android:text="Tap to Sign Up or Login"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF6600" />

        <ListView
            android:id="@+id/list_slidermenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030"
            android:choiceMode="singleChoice"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@color/list_background" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>