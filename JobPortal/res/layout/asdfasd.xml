<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff0f0f0"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff6699ff"
            android:paddingBottom="7.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="7.0dip"
            android:shadowColor="#ff909090"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="5.0"
            android:text="Educational Details"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <LinearLayout
            android:id="@+id/layoutGraduation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff0f0f0"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Graduation"
                android:textColor="#ff336666"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="#ff6699ff" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Course: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnFromYearSelect1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/btn_spinner"
                    android:drawableRight="@drawable/chevron2"
                    android:gravity="left|center"
                    android:text="Select Course"
                    android:textColor="#ff808080" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Year of Passing: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_spinner"
                        android:drawableRight="@drawable/chevron2"
                        android:gravity="center"
                        android:text="Select Year"
                        android:textColor="#ff808080" />

                    <Button
                        android:id="@+id/btnFromMonthSelect1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_spinner"
                        android:drawableRight="@drawable/chevron2"
                        android:gravity="center"
                        android:text="Select Month"
                        android:textColor="#ff808080" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Institution: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etKeyskill1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:background="@drawable/txt_back"
                    android:ems="10"
                    android:hint="your position"
                    android:paddingBottom="7.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="#ff585858" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:paddingLeft="15.0dip"
            android:text="+ Add Post Graduation"
            android:textColor="#ff336666"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@+id/layoutPostGraduation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff0f0f0"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Post Graduation"
                android:textColor="#ff336666"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="#ff6699ff" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Course: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnFromYearSelect1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/btn_spinner"
                    android:drawableRight="@drawable/chevron2"
                    android:gravity="left|center"
                    android:text="Select Course"
                    android:textColor="#ff808080" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Year of Passing: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_spinner"
                        android:drawableRight="@drawable/chevron2"
                        android:gravity="center"
                        android:text="Select Year"
                        android:textColor="#ff808080" />

                    <Button
                        android:id="@+id/btnFromMonthSelect1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/btn_spinner"
                        android:drawableRight="@drawable/chevron2"
                        android:gravity="center"
                        android:text="Select Month"
                        android:textColor="#ff808080" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:text="Institution: "
                    android:textColor="#ff336666"
                    android:textSize="16.0sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etKeyskill1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:background="@drawable/txt_back"
                    android:ems="10"
                    android:hint="your position"
                    android:paddingBottom="7.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="#ff585858" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister1"
        android:layout_width="wrap_content"
        android:layout_height="45.0dip"
        android:layout_gravity="bottom|right|center"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/btn_back"
        android:paddingLeft="50.0dip"
        android:paddingRight="50.0dip"
        android:text="SAVE"
        android:textColor="#ffffffff"
        android:textSize="18.0sp"
        android:textStyle="normal" />

</LinearLayout>