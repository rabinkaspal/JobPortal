                            android:layout_height="wrap_content"
                            android:background="#ff6699ff"
                            android:paddingBottom="7.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="7.0dip"
                            android:shadowColor="#ff909090"
                            android:shadowDx="2.0"
                            android:shadowDy="2.0"
                            android:shadowRadius="5.0"
                            android:text="Educational Details"
                            android:textColor="#ffffffff"
                            android:textSize="18.0sp" />

                        <LinearLayout
                            android:id="@+id/layoutGraduation"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#fff0f0f0"
                            android:orientation="vertical"
                            android:padding="10.0dip" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Graduation"
                                android:textColor="#ff336666"
                                android:textSize="16.0sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1.0dip"
                                android:layout_marginBottom="10.0dip"
                                android:layout_marginTop="5.0dip"
                                android:background="#ff6699ff" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10.0dip"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5.0dip"
                                    android:text="Course: "
                                    android:textColor="#ff336666"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <Button
                                    android:id="@+id/btnSelectCourse"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10.0dip"
                                    android:background="@drawable/btn_spinner"
                                    android:drawableRight="@drawable/chevron2"
